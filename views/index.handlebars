<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center" id="top-bar">
      <img src="/assets/img/burger_icon.png" alt="burger" />
			<h1> Eat-Da-Burger! </h1>
		</div>
		<div class="col-xs-6 text-center" class="task">
			<div class="row">
			  {{#each burger_data}}
			  	{{#unless this.devoured}}
				<div class="col-xs-9 text-center">
					<pre>{{this.id}}. {{this.burger_name}}
					</pre>

				</div>
				<div class="col-xs-3 text-center">
					<form method= "POST" action="/burgers/update?_method=PUT" class="button-size">
						<input input type="hidden" name="burger_id" class="burger_id" type="text" value={{this.id}}><br>
						<button  id="devour" type="submit" class="btn btn-default">Devour it!</button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>

    <div class="col-xs-6 text-center" class="task">
      {{#each burger_data}}
        {{#if this.devoured}}
          <input id="devoured" class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>

<div class="container">
  <div id="create" class="col-xs-12 text-center enter_section">
    <p>What kind of burger do you want to eat?</p>
  <form id="burger-create" action="/burgers/create" method="POST">
    <input id="user-input" type="text" name="burger_name" class="form-control id="enter_text"">
    <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
  </form>
  </div>
</div>

